<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/Title</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoToolbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Garis bawah -->
        <item name="colorControlNormal">#A5A19A</item>
        <item name="colorControlActivated">#ff8000</item>
        <item name="colorControlHighlight">#ff8000</item>
    </style>

    <style name="WhiteToolbar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:homeAsUpIndicator">@drawable/ic_keyboard_arrow_left</item>
        <item name="colorControlNormal">#A5A19A</item>
        <item name="colorControlActivated">#ff8000</item>
        <item name="colorControlHighlight">#ff8000</item>
    </style>

    <style name="WhiteStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>


    <!-- Toolbar Theme -->
    <style name="ToolbarThemeWhite" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/white</item>



    </style>
    <style name="ToolbarThemeBlack" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/HitamEnak</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorOrange</item>
    </style>

    <!-- splash srceen -->
    <style name="IntroTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay"
           parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/Title</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
