<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>

            <!-- Shadow -->
            <item
                android:top="1dp"
                android:right="1dp"
                android:left="1dp">
                <shape>

                    <corners android:radius="14dp" />
                    <solid android:color="#D6D6D6" />

                </shape>
            </item>
            <!-- Fill Colour -->
            <item
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp">
                <shape>

                    <solid android:color="#F6BC24"/>

                    <stroke android:width="1dp" android:color="#F6BC24" />

                    <corners android:radius="8dp" />

                    <padding
                        android:bottom="16dp"
                        android:left="48dp"
                        android:right="48dp"
                        android:top="16dp" />

                </shape>
            </item>
        </layer-list>
    </item>
</selector>